    <%= form.label :effort, style: "display: block" %>
    <%= form.number_field :effort %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
